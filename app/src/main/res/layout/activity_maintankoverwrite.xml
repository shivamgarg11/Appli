<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMIN.maintankoverwrite"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADMIN/MAIN TANK/Change"
        android:gravity="center|top"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#8A000000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logoo"
        android:layout_gravity="right"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE AND TIME "
            style="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            android:background="#bfffffff"
            android:padding="2dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:background="#84ffffff"
            android:padding="2dp"/>



<LinearLayout
    android:visibility="gone"
    android:id="@+id/linearpurchase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Type : "
                />

            <RadioGroup
                android:id="@+id/oiltype"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:checked="true"
                    android:layout_weight="1"
                    android:id="@+id/blackoil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLACK OIL"/>

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/blueoil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLUE OIL"/>

            </RadioGroup>


        </LinearLayout>




        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER Name"
                android:gravity="center" />

        </android.support.design.widget.TextInputLayout>





        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/gatepassno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER Gatepass Number"
                android:gravity="center" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputLayout
                android:layout_weight="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER Weight"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>

            </android.support.design.widget.TextInputLayout>


            <RadioGroup
                android:id="@+id/oilunit"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kg"/>

                <RadioButton
                    android:checked="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/liter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"/>

            </RadioGroup>

        </LinearLayout>

</LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearissue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#bfffffff"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Issue To  : "
                    />

                <RadioGroup
                    android:id="@+id/tankissue"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:checked="true"
                        android:layout_weight="1"
                        android:id="@+id/tunnel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tunnel Tank 1"/>

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/tunnel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tunnel Tank 2"/>

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/tunnel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tunnel Tank 3"/>

                </RadioGroup>


            </LinearLayout>




            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#bfffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/beforeissue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER Reading Before Issue"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>

            </android.support.design.widget.TextInputLayout>





            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#bfffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/afterissue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER Reading After Issue"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#bfffffff"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_weight="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ENTER Time Duration (min)"
                        android:gravity="center"
                        android:inputType="numberDecimal"/>

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearcms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#bfffffff"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="number"
                    android:id="@+id/readingcms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER Reading in (cm)"
                    android:gravity="center" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>



        <LinearLayout
            android:background="#88ffffff"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/close"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>


            <TextView
                android:layout_marginLeft="100dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/done"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

        </LinearLayout>


        <LinearLayout
            android:background="#88ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="70dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOSE" />


            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="120dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"/>

        </LinearLayout>



    </LinearLayout>




</FrameLayout>