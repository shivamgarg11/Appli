<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Maintankpurchase"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center"
                android:id="@+id/path"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USER/OIL/MAINTANK/PURCHASE"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#8A000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logoo"/>

        </LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE AND TIME "
            style="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            android:background="#bfffffff"
            android:padding="2dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:background="#84ffffff"
            android:padding="2dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Type : "
                />

            <RadioGroup
                android:id="@+id/oiltype"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:checked="true"
                android:layout_weight="1"
                android:id="@+id/blackoil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLACK OIL"/>

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/blueoil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLUE OIL"/>

            </RadioGroup>


        </LinearLayout>




        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER Name"
                android:gravity="center" />

        </android.support.design.widget.TextInputLayout>





        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gatepassno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER Gatepass Number"
                android:gravity="center" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfffffff"
            android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER Weight"
                android:gravity="center"
                android:inputType="numberDecimal"/>

        </android.support.design.widget.TextInputLayout>


            <RadioGroup
                android:id="@+id/oilunit"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg"/>

            <RadioButton
                android:checked="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/liter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:background="#88ffffff"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/close"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

            <TextView
                android:layout_marginLeft="100dp"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/done"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#555"/>

        </LinearLayout>


        <LinearLayout
            android:background="#88ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="70dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOSE" />


            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="120dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>