<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.gassummaryfrag"
    android:orientation="vertical"
    android:background="#afd4c7c7"
   android:paddingBottom="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATE "
        style="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:background="#bfffffff"
        android:padding="2dp"/>

    <TextView
        android:gravity="center"
        android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/TextAppearance.AppCompat.Subhead"
        android:textStyle="bold"
        android:background="#84ffffff"
        android:padding="2dp"/>


    <LinearLayout
        android:background="#bcffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="READING(m^3) :"/>

        <TextView
            android:id="@+id/input"
            android:layout_weight="1"
            android:textColor="#100006"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:background="#bcffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DIFFERENCE(m^3) :"/>

        <TextView
            android:id="@+id/difference"
            android:textColor="#100006"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:background="#bcffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SCM :"/>

        <TextView
            android:id="@+id/scm"
            android:textColor="#100006"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:background="#bcffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="MMBTO :"/>

        <TextView
            android:id="@+id/mmbto"
            android:textColor="#100006"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:background="#bcffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RATE :"/>

        <TextView
            android:id="@+id/ride"
            android:textColor="#100006"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>


    <LinearLayout
        android:background="#bcffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="15 DAYS BILL :"/>

        <TextView
            android:id="@+id/bill"
            android:textColor="#100006"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>


</LinearLayout>
    </ScrollView>


</FrameLayout>